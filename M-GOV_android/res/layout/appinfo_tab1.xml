<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/info_tab1Layout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<TextView android:id="@+id/t1_title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="請至少填入以下一個欄位">
	</TextView>
	
	<TextView android:id="@+id/t1_sn" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="案件序號"
		android:layout_below="@id/t1_title" android:layout_marginTop="3dip">
	</TextView>	
	<EditText android:id="@+id/t1_nameInput" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="18sp" android:layout_below="@id/t1_sn">
	</EditText>
	
	<TextView android:id="@+id/t1_name" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="查報人姓名" android:layout_marginTop="20dip"
		android:layout_toRightOf="@id/t1_sn" android:layout_marginLeft="60dip"
		>
	</TextView>	
	<EditText android:id="@+id/t1_snInput" android:layout_width="wrap_content"
		android:layout_height="wrap_content"  android:layout_below="@id/t1_name"
		android:layout_toRightOf="@id/t1_nameInput" android:layout_marginLeft="13dip">
	</EditText>
	
	<TextView android:id="@+id/t1_email" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="查報人 Email"
		android:layout_below="@id/t1_nameInput" android:layout_marginTop="3dip">
	</TextView>	
	<EditText android:id="@+id/t1_emailinput" android:layout_width="150dip"
		android:layout_height="wrap_content"  android:layout_below="@id/t1_email"
		>
	</EditText>
	
	<TextView android:id="@+id/search_bytype" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Search By Types"
		android:layout_below="@id/t1_emailinput" android:layout_marginTop="3dip">
	</TextView>	
	
	<RelativeLayout android:id="@+id/info_tab1Layout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_below="@id/search_bytype">
	
