<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView android:id="@+id/take_pic" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="20dip" android:layout_gravity="center_horizontal"
		android:layout_margin="20dip" android:gravity="center_horizontal"
		></TextView>
	
	<TextView android:id="@+id/select_pic" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="20dip" android:layout_gravity="center_horizontal"
			android:layout_margin="20dip" android:gravity="center_horizontal"
			></TextView>

</LinearLayout>
